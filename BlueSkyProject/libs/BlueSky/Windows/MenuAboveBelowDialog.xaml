<Window x:Class="BlueSky.Windows.MenuAboveBelowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dragged Item Location Dialog." Height="120" MinWidth="345" MaxWidth="600" SizeToContent="Width" ResizeMode="NoResize">
    <Grid Background="Lavender">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"  Name="message" Text="Where in target would you like to place your dragged item?" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" />
        <RadioButton Grid.Row="1" Margin="3" Content="Above Target"  Name="radioAbove" />
        <RadioButton Grid.Row="2" Margin="3" Content="Below Target"  Name="radiodBelow" IsChecked="True" />
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Content="OK" Margin="3"  Name="okBut" MinWidth="50" Click="okBut_Click" />
            <Button Content="Cancel" Margin="3"  Name="CancelBut" MinWidth="50" Click="CancelBut_Click" />
        </StackPanel>
    </Grid>
</Window>
