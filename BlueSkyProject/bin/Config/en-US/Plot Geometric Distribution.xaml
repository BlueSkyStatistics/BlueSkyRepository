<BSkyCanvas internalhelpfilename="{x:Null}" Title="Geometric Distribution Plot" ModelClasses="{x:Null}" StatusTextBoxName="{x:Null}" customsyntax="{x:Null}" EditableComboBoxName="{x:Null}" RPackages="{x:Null}" CanExecute="True" PrereqCommandString="{x:Null}" CommandString="local(&#xA;{&#xA;.x &lt;- 0:10&#xA;if({{plotProb}}{{plotDistr}})&#xA;{&#xA;&#xA;  RcmdrMisc::plotDistr(.x, stats::dgeom(.x, prob={{psuccess}}), xlab=&quot;Number of Failures until Success&quot;, &#xA;  ylab=&quot;Probability Mass&quot;, &#xA;  main=&quot;Geometric Distribution:  Probability of success={{psuccess}}&quot;,   discrete=TRUE)&#xA;}&#xA;else&#xA;{&#xA;RcmdrMisc::plotDistr(.x, stats::pgeom(.x, prob={{psuccess}}), xlab=&quot;Number of Failures until Success&quot;,&#xA;  ylab=&quot;Cumulative Probability&quot;, &#xA;main=&quot;Geometric Distribution:  Probability of success={{psuccess}}&quot;,   discrete=TRUE, cdf=TRUE)&#xA;}&#xA;&#xA;}&#xA;)" dlgsyntax="local(&#xA;{&#xA;.x &lt;- 0:10&#xA;if({{plotProb}}{{plotDistr}})&#xA;{&#xA;&#xA;  RcmdrMisc::plotDistr(.x, stats::dgeom(.x, prob={{psuccess}}), xlab=&quot;Number of Failures until Success&quot;, &#xA;  ylab=&quot;Probability Mass&quot;, &#xA;  main=&quot;Geometric Distribution:  Probability of success={{psuccess}}&quot;,   discrete=TRUE)&#xA;}&#xA;else&#xA;{&#xA;RcmdrMisc::plotDistr(.x, stats::pgeom(.x, prob={{psuccess}}), xlab=&quot;Number of Failures until Success&quot;,&#xA;  ylab=&quot;Cumulative Probability&quot;, &#xA;main=&quot;Geometric Distribution:  Probability of success={{psuccess}}&quot;,   discrete=TRUE, cdf=TRUE)&#xA;}&#xA;&#xA;}&#xA;)" Helpfile="{x:Null}" splitProcessing="True" MenuLocation="{x:Null}" OutputDefinition="{x:Null}" Width="250" Command="False" Height="100" HelpText="&lt;html&gt;&lt;head&gt;&lt;style type=&quot;text/css&quot;&gt;.c0 { color: Black } .c1 { margin: 0px 0px 10px } .c2 { margin: 0px 0px 11px; font-size: 12.87px; font-weight: bold } .c3 { font-family: 'Courier New' } .c4 { vertical-align: middle } .c5 { vertical-align: top } .c6 { margin: 0px 0px 12px } .c7 { font-style: italic } .c8 { margin: 0px 0px 10px; text-align: center } &lt;/style&gt;&lt;/head&gt;&lt;body class=&quot;c0&quot;&gt;&lt;p class=&quot;c1&quot;&gt;&amp;#x200b;&lt;/p&gt;&lt;div class=&quot;c2&quot;&gt;Description&lt;/div&gt;&lt;p class=&quot;c1&quot;&gt;Density, distribution function, quantile function and random generation for the geometric distribution with parameter&amp;#160;&lt;span class=&quot;c3&quot;&gt;prob&lt;/span&gt;.&lt;/p&gt;&lt;div class=&quot;c2&quot;&gt;Usage&lt;/div&gt;&lt;div&gt;&lt;span class=&quot;c3&quot;&gt;dgeom(x, prob, log = FALSE)&lt;br/&gt;pgeom(q, prob, lower.tail = TRUE, log.p = FALSE)&lt;br/&gt;qgeom(p, prob, lower.tail = TRUE, log.p = FALSE)&lt;br/&gt;rgeom(n, prob)&lt;br/&gt;&lt;/span&gt;&lt;/div&gt;&lt;div class=&quot;c2&quot;&gt;Arguments&lt;/div&gt;&lt;table&gt;&lt;col/&gt;&lt;col/&gt;&lt;tbody class=&quot;c4&quot;&gt;&lt;tr class=&quot;c5&quot;&gt;&lt;td class=&quot;c5&quot;&gt;&lt;span class=&quot;c3&quot;&gt;x, q&lt;/span&gt;&lt;/td&gt;&lt;td class=&quot;c5&quot;&gt;&lt;p class=&quot;c6&quot;&gt;vector of quantiles representing the number of failures in a sequence of Bernoulli trials before success occurs.&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;tr class=&quot;c5&quot;&gt;&lt;td class=&quot;c5&quot;&gt;&lt;span class=&quot;c3&quot;&gt;p&lt;/span&gt;&lt;/td&gt;&lt;td class=&quot;c5&quot;&gt;&lt;p class=&quot;c6&quot;&gt;vector of probabilities.&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;tr class=&quot;c5&quot;&gt;&lt;td class=&quot;c5&quot;&gt;&lt;span class=&quot;c3&quot;&gt;n&lt;/span&gt;&lt;/td&gt;&lt;td class=&quot;c5&quot;&gt;&lt;p class=&quot;c6&quot;&gt;number of observations. If&amp;#160;&lt;span class=&quot;c3&quot;&gt;length(n) &amp;gt; 1&lt;/span&gt;, the length is taken to be the number required.&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;tr class=&quot;c5&quot;&gt;&lt;td class=&quot;c5&quot;&gt;&lt;span class=&quot;c3&quot;&gt;prob&lt;/span&gt;&lt;/td&gt;&lt;td class=&quot;c5&quot;&gt;&lt;p class=&quot;c6&quot;&gt;probability of success in each trial.&amp;#160;&lt;span class=&quot;c3&quot;&gt;0 &amp;lt; prob &amp;lt;= 1&lt;/span&gt;.&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;tr class=&quot;c5&quot;&gt;&lt;td class=&quot;c5&quot;&gt;&lt;span class=&quot;c3&quot;&gt;log, log.p&lt;/span&gt;&lt;/td&gt;&lt;td class=&quot;c5&quot;&gt;&lt;p class=&quot;c6&quot;&gt;logical; if TRUE, probabilities p are given as log(p).&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;tr class=&quot;c5&quot;&gt;&lt;td class=&quot;c5&quot;&gt;&lt;span class=&quot;c3&quot;&gt;lower.tail&lt;/span&gt;&lt;/td&gt;&lt;td class=&quot;c5&quot;&gt;&lt;p class=&quot;c6&quot;&gt;logical; if TRUE (default), probabilities are&amp;#160;&lt;span class=&quot;c7&quot;&gt;P[X ≤ x]&lt;/span&gt;, otherwise,&amp;#160;&lt;span class=&quot;c7&quot;&gt;P[X &amp;gt; x]&lt;/span&gt;.&lt;/p&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/tbody&gt;&lt;/table&gt;&lt;div class=&quot;c2&quot;&gt;Details&lt;/div&gt;&lt;p class=&quot;c1&quot;&gt;The geometric distribution with&amp;#160;&lt;span class=&quot;c3&quot;&gt;prob&lt;/span&gt;&amp;#160;&lt;span class=&quot;c7&quot;&gt;= p&lt;/span&gt;&amp;#160;has density&lt;/p&gt;&lt;p class=&quot;c8&quot;&gt;&lt;span class=&quot;c7&quot;&gt;p(x) = p (1-p)^x&lt;/span&gt;&lt;/p&gt;&lt;p class=&quot;c1&quot;&gt;for&amp;#160;&lt;span class=&quot;c7&quot;&gt;x = 0, 1, 2, …&lt;/span&gt;,&amp;#160;&lt;span class=&quot;c7&quot;&gt;0 &amp;lt; p ≤ 1&lt;/span&gt;.&lt;/p&gt;&lt;p class=&quot;c1&quot;&gt;If an element of&amp;#160;&lt;span class=&quot;c3&quot;&gt;x&lt;/span&gt;&amp;#160;is not integer, the result of&amp;#160;&lt;span class=&quot;c3&quot;&gt;dgeom&lt;/span&gt;&amp;#160;is zero, with a warning.&lt;/p&gt;&lt;p class=&quot;c1&quot;&gt;The quantile is defined as the smallest value&amp;#160;&lt;span class=&quot;c7&quot;&gt;x&lt;/span&gt;&amp;#160;such that&amp;#160;&lt;span class=&quot;c7&quot;&gt;F(x) ≥ p&lt;/span&gt;, where&amp;#160;&lt;span class=&quot;c7&quot;&gt;F&lt;/span&gt;&amp;#160;is the distribution function.&lt;/p&gt;&lt;div class=&quot;c2&quot;&gt;Value&lt;/div&gt;&lt;p class=&quot;c1&quot;&gt;&lt;span class=&quot;c3&quot;&gt;dgeom&lt;/span&gt;&amp;#160;gives the density,&amp;#160;&lt;span class=&quot;c3&quot;&gt;pgeom&lt;/span&gt;&amp;#160;gives the distribution function,&amp;#160;&lt;span class=&quot;c3&quot;&gt;qgeom&lt;/span&gt;&amp;#160;gives the quantile function, and&amp;#160;&lt;span class=&quot;c3&quot;&gt;rgeom&lt;/span&gt;&amp;#160;generates random deviates.&lt;/p&gt;&lt;p class=&quot;c1&quot;&gt;Invalid&amp;#160;&lt;span class=&quot;c3&quot;&gt;prob&lt;/span&gt;&amp;#160;will result in return value&amp;#160;&lt;span class=&quot;c3&quot;&gt;NaN&lt;/span&gt;, with a warning.&lt;/p&gt;&lt;p class=&quot;c1&quot;&gt;The length of the result is determined by&amp;#160;&lt;span class=&quot;c3&quot;&gt;n&lt;/span&gt;&amp;#160;for&amp;#160;&lt;span class=&quot;c3&quot;&gt;rgeom&lt;/span&gt;, and is the maximum of the lengths of the numerical arguments for the other functions.&lt;/p&gt;&lt;p class=&quot;c1&quot;&gt;The numerical arguments other than&amp;#160;&lt;span class=&quot;c3&quot;&gt;n&lt;/span&gt;&amp;#160;are recycled to the length of the result. Only the first elements of the logical arguments are used.&lt;/p&gt;&lt;/body&gt;&lt;/html&gt;" RHelpText="help(dgeom, package=stats)" Background="#FFEEEFFF" xmlns="clr-namespace:BSky.Controls;assembly=BSky.Controls" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation"><BSkyTextBox PrefixTxt="{x:Null}" OverWriteExistingVariables="False" OverwriteSettings="DontPrompt" Name="psuccess" Width="135" Height="30" Left="6" Top="26" SubstituteSettings="TextAsIs" CanExecute="True" Enabled="True" Syntax="%%VALUE%%" TextWrapping="Wrap" AcceptsTab="True" VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI" FontSize="12" VerticalContentAlignment="Center" Template="{av:DynamicResource TextBoxBaseControlTemplate}" AllowDrop="True" IsEnabled="True" av:Canvas.Left="6" av:Canvas.Top="26"><BSkyTextBox.TextChangedBehaviour><BehaviourCollection Capacity="4"><Behaviour><Behaviour.Condition><Condition PropertyName="Text" Value="{x:Null}" Operator="isNullOrEmpty" /></Behaviour.Condition><Behaviour.Setters><PropertySettersCollection Capacity="4"><PropertySetter ControlName="psuccess" PropertyName="CanExecute" Value="false" /></PropertySettersCollection></Behaviour.Setters></Behaviour><Behaviour><Behaviour.Condition><Condition PropertyName="Text" Value="{x:Null}" Operator="IsNumeric" /></Behaviour.Condition><Behaviour.Setters><PropertySettersCollection Capacity="4"><PropertySetter ControlName="psuccess" PropertyName="CanExecute" Value="true" /></PropertySettersCollection></Behaviour.Setters></Behaviour><Behaviour><Behaviour.Condition><Condition PropertyName="Text" Value="{x:Null}" Operator="NotNumeric" /></Behaviour.Condition><Behaviour.Setters><PropertySettersCollection Capacity="4"><PropertySetter ControlName="psuccess" PropertyName="CanExecute" Value="false" /></PropertySettersCollection></Behaviour.Setters></Behaviour></BehaviourCollection></BSkyTextBox.TextChangedBehaviour><BSkyTextBox.Style><av:Style TargetType="av:TextBox"><av:Style.Resources><av:ResourceDictionary /></av:Style.Resources><av:Setter Property="av:UIElement.Effect"><av:Setter.Value><av:DropShadowEffect Color="#FFF5F5DC" /></av:Setter.Value></av:Setter></av:Style></BSkyTextBox.Style>0.5</BSkyTextBox><BSkyLabel Name="Meanlbl" Text="Probability of success" Width="124" Height="35" Left="2" Top="2" CanExecute="False" FontFamily="Segoe UI" FontSize="12" av:Canvas.Left="2" av:Canvas.Top="2">Probability of success</BSkyLabel><BSkyLabelReqdField Name="rq3" Text="*" Width="15" Height="25" Left="117" Top="0" CanExecute="False" Foreground="#FFFF0000" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" av:Canvas.Left="117" av:Canvas.Top="0">*</BSkyLabelReqdField><BSkyRadioButton GroupName="rg1" Name="plotProb" Text="Plot probability mass function" Width="182" Left="0" Top="0" Height="20" IsSelected="True" CanExecute="True" Enabled="True" Syntax="TRUE" IsChecked="True" FontFamily="Segoe UI" FontSize="12" Style="{av:DynamicResource RadioButtonTemplate}" IsEnabled="True" av:Canvas.Left="6" av:Canvas.Top="64"><BSkyRadioButton.CheckedChangeBehaviour><BehaviourCollection Capacity="0" /></BSkyRadioButton.CheckedChangeBehaviour>Plot probability mass function</BSkyRadioButton><BSkyRadioButton GroupName="rg1" Name="plotDistr" Text="Plot distribution function" Width="164" Left="0" Top="0" Height="22" IsSelected="False" CanExecute="True" Enabled="True" Syntax="FALSE" IsChecked="False" FontFamily="Segoe UI" FontSize="12" Style="{av:DynamicResource RadioButtonTemplate}" IsEnabled="True" av:Canvas.Left="6" av:Canvas.Top="82"><BSkyRadioButton.CheckedChangeBehaviour><BehaviourCollection Capacity="0" /></BSkyRadioButton.CheckedChangeBehaviour>Plot distribution function</BSkyRadioButton></BSkyCanvas>