<UserControl x:Class="BSky.Controls.BSkySpinnerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSky.Controls.Controls"
              >
    <Grid Name="spinnergrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67"></ColumnDefinition>
            <ColumnDefinition Width="16"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="text" MinHeight="20" MaxHeight="22"  >0</TextBox>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Name="upbtn" MaxWidth="15" MinHeight="10" MaxHeight="11" >
                <Button.Content>
                    <Image Source="/BSky.Controls;component/Resources/spinnerup.png"></Image>
                </Button.Content>
            </Button>
            <Button Name="downbtn" MaxWidth="15" MinHeight="10" MaxHeight="11" >
                <Button.Content>
                    <Image Source="/BSky.Controls;component/Resources/spinnerdown.png"></Image>
                </Button.Content>
            </Button>
            <!-- minheight=18, max=22-->
        </StackPanel>
    </Grid>
</UserControl>
