<UserControl x:Class="BSky.Controls.BSkySpinnerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSky.Controls.Controls"
              >
    <Grid Name="spinnergrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="text" MinHeight="20" MaxHeight="22" MinWidth="50" >0</TextBox>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Name="upbtn" MinWidth="15" MinHeight="11" MaxHeight="14" >^
                <!--<Button.Content>
                    <Image Source="/BSky.Controls;component/Resources/uparrow.png"></Image>
                </Button.Content>-->
            </Button>
            <Button Name="downbtn" MinWidth="15" MinHeight="11" MaxHeight="14" >V
                <!--<Button.Content>
                    <Image Source="/BSky.Controls;component/Resources/downarrow.png"></Image>
                </Button.Content>-->
            </Button>
            <!-- minheight=18, max=22-->
        </StackPanel>
    </Grid>
</UserControl>
